#!/bin/bash

if [[ -e /etc/os-release ]]; then . /etc/os-release; else . /usr/lib/os-release; fi

CLEAR="\033[2J\033[H"
GREET="Welcome to"
BLUE="\033[1;34m"
YELLOW="\033[1;33m"
RESET="\033[0m"
KERNEL=$(uname -s)
RELEASE=$(uname -r)
TTY=$(tty | cut -c 6-)

echo -e "$CLEAR$GREET $BLUE$PRETTY_NAME $RESET- $KERNEL $RELEASE $RESET($YELLOW$TTY$RESET)"
