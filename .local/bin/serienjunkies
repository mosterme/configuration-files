#!/bin/sh
URL=https://www.serienjunkies.de/docs/serienkalender-aktuell.html
curl -s $URL |
grep -Po '(?<=<div class="sjf-show-calendar-date"> ).+?(?= </div>)|<div class="sjf-show-calendar-title"> <a href=[^>]+>\K.+?(?= </a>)' |
grep -Ez '[DFMS][aceghimnorstw]{5,10}, [123]?[0-9]. [ADFJMNOS][a√§begiklmnoprstuvz]{2,8} 202[0-9]' --color=always | column
echo ; echo $URL
